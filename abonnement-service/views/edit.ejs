<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Abon</title>
</head>
<body>
  <h1>Edit Abon</h1>
  <form action="/abonnements/<%= abon._id %>" method="POST">
    <div>
      <label for="id_abon">Abon ID:</label>
      <input type="number" id="id_abon" name="id_abon" value="<%= abon.id_abon %>" readonly>
    </div>
    <div>
      <label for="type_abon">Subscription Type:</label>
      <input type="text" id="type_abon" name="type_abon" value="<%= abon.type_abon %>" required>
    </div>
    <div>
      <label for="type_paiemment">Payment Type:</label>
      <input type="text" id="type_paiemment" name="type_paiemment" value="<%= abon.type_paiemment %>" required>
    </div>
    <div>
      <label for="montant">Amount:</label>
      <input type="number" id="montant" name="montant" value="<%= abon.montant %>" required>
    </div>
    <div>
      <label for="dateDeb">Start Date:</label>
      <input type="date" id="dateDeb" name="dateDeb" value="<%= abon.dateDeb.toISOString().split('T')[0] %>" required>
    </div>
    <div>
      <label for="dateFin">End Date:</label>
      <input type="date" id="dateFin" name="dateFin" value="<%= abon.dateFin.toISOString().split('T')[0] %>" required>
    </div>
    <div>
      <label for="id_user">User ID:</label>
      <select id="id_user" name="id_user" required>
        <% users.forEach(user => { %>
          <option value="<%= user._id %>" <%= abon.id_user.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <button type="submit">Save Changes</button>
    </div>
  </form>
</body>
</html>
