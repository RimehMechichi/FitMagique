<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Reservation</title>
</head>
<body>

    <h1>Add New Reservation</h1>

<a href="/reservations/new">Add a New Reservation</a>
        <div>
            <label for="id_reservation">Reservation ID:</label>
            <input type="number" id="id_reservation" name="id_reservation" required>
        </div>

        <div>
            <label for="DateR">Date:</label>
            <input type="date" id="DateR" name="DateR" required>
        </div>

        <div>
            <label for="horaire">Time:</label>
            <input type="time" id="horaire" name="horaire" required>
        </div>

        <div>
            <label for="id_User">User:</label>
            <select id="id_User" name="id_User" required>
                <% users.forEach(user => { %>
                    <option value="<%= user._id %>"><%= user.username %></option>
                <% }) %>
            </select>
        </div>

        <button type="submit">Create Reservation</button>
    </form>

    <a href="/">Back to Reservations</a>

</body>
</html>
