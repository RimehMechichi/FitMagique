<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Reservation</title>
</head>
<body>

    <h1>Edit Reservation</h1>

    <form action="/reservations/<%= reservation._id %>" method="POST">
        <div>
            <label for="id_reservation">Reservation ID:</label>
            <input type="number" id="id_reservation" name="id_reservation" value="<%= reservation.id_reservation %>" required readonly>
        </div>

        <div>
            <label for="DateR">Date:</label>
            <input type="date" id="DateR" name="DateR" value="<%= reservation.DateR.toISOString().split('T')[0] %>" required>
        </div>

        <div>
            <label for="horaire">Time:</label>
            <input type="time" id="horaire" name="horaire" value="<%= reservation.horaire %>" required>
        </div>

        <div>
            <label for="id_User">User:</label>
            <select id="id_User" name="id_User" required>
                <% users.forEach(user => { %>
                    <option value="<%= user._id %>" <%= user._id == reservation.id_User._id ? 'selected' : '' %>><%= user.username %></option>
                <% }) %>
            </select>
        </div>

        <button type="submit">Save Changes</button>
    </form>

    <a href="/">Back to Reservations</a>

</body>
</html>
